<div class="Sign_Form">
  <h1>List of Events</h1>
  <script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#eventlist').dataTable({
      sPaginationType: "full_numbers",
      //bJQueryUI: true,
      "sDom": 'T<"clear">lfrtip',
      "oTableTools": {
        "sSwfPath": "media/swf/copy_csv_xls_pdf.swf",
        "sRowSelect": "multi"
      },
      "sScrollY": "200px",
      "sDom": "frtiS",
      "bDeferRender": true
    })
  });
  </script>
  <div class="csvTable">
    <table id="eventlist" class="display">
      <thead>
        <tr>
          <th>Event ID</th>
          <th>Event Name</th>
          <th>Starts at</th>
          <th>Ends at</th>
          <th>Venue</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.name %></td>
          <td><%= event.starts_at.strftime("%b %d, %Y") %></td>
          <td><%= event.ends_at.strftime("%b %d, %Y") %></td>
          <td><%= event.venue %></td>
          <td>
            <%= link_to "Export to CSV", eventcsv_path(event.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>