<div class="Sign_Form">
  <h1>Track Progress</h1>
  <script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#eventlist').dataTable({
      sPaginationType: "full_numbers",
      bJQueryUI: true,
      "sDom": 'T<"clear">lfrtip',
      "oTableTools": {
        "sSwfPath": "media/swf/copy_csv_xls_pdf.swf"
      }
    })
  });
  </script>
  <div>
  	<%= @totalpoints %>
  </div>
  <div class="csvTable">
    <table id="eventlist" class="display">
      <thead>
        <tr>
          <th>Event ID</th>
          <th>Event Name</th>
          <th>Starts at</th>
          <th>Ends at</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.event.id %></td>
          <td><%= attendance.event.name %></td>
          <td><%= attendance.event.starts_at.strftime("%b %d, %Y at %I:%M%p") %></td>
          <td><%= attendance.event.ends_at.strftime("%b %d, %Y at %I:%M%p") %></td>
          <td><%= attendance.role %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>